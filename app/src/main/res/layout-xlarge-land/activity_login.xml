<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    app:layout_gravity="center|center_horizontal|center_vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcom_gardien_backround"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/loginImage">

    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="600dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="70dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:padding="15dp"
        android:text="La gestion de vos chantiers entre vos mains"
        android:textColor="@color/design_default_color_background"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/erreur"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/utilisateur"
            android:layout_width="540dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/login_edit"
            android:ems="10"
            android:hint="Nom d'utilisateur"
            android:inputType="textPersonName"
            android:paddingLeft="60dp"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/motPass"
            android:layout_width="540dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_edit"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:textSize="36sp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button2"
            android:text="Se connecter"
            android:textColor="@color/design_default_color_background"
            android:textSize="24sp" />
        <Button
            android:id="@+id/configBtn"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button2"
            android:text="Configuration"
            android:textColor="@color/design_default_color_background"
            android:textSize="24sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>