                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="TextView"
                    android:textSize="24sp"
                    app:fontFamily="sans-serif" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>